@{
    ViewData["Title"] = "Add Product";
}

<div class="text-center">
    <h1 class="display-4">Add Product</h1>
</div>

<form asp-controller="Product" asp-action="AddProductItem" method="post">
    <div class="mb-3">
        <label for="productname" class="form-label">Product Name</label>
        <input type="text" name="productname" class="form-control" id="productname" placeholder="Enter your product." />
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" name="description" class="form-control" id="description" placeholder="Enter the description of your product." />
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="price" class="form-control" id="price" placeholder="Enter the price of your product." />
    </div>
    <div class="mb-3">
        <label for="color" class="form-label">Color</label>
        <input type="text" name="color" class="form-control" id="color" placeholder="Enter the color of your product" />
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>